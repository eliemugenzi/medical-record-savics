<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/records.css">
    <title>Savics</title>
</head>
<body>
    <div class="container">
        <h2 class="center">Medical records</h2>
        <a href="/">Go Back</a>

        <form action="/records" method="GET">
            <label for="">Filter by age</label>
            <select name="age" id="age">
                <option value="under_18">Under 18</option>
                <option value="over_18">18 +</option>
            </select>

            <input type="submit" value="Filter" class="filter-button">
        </form>
    <ul>
        <%if(records.length!==0){ %>
            <% records.forEach((record, index)=>{ %>

                <li>
                    <h2>Record No. <%=index+1%></h2>
                    <div class="user">
                        <h3>User Information</h3>
                        <p><strong>User:</strong> <%= record.user.first_name %> <%=record.user.last_name%></p>
                        <p><strong>Age:</strong> <%=record.user.age%></p>
                    </div>
    
                    <h3> <%=record.user.first_name%>'s Medical Record</h3>
    
                    <p>Title: <%=record.title%></p>
                    <p>Description: <%=record.description%></p>
                    <% if(record.has_coronavirus){ %>
                       <span class="corona-plus">COVID-19 Positive</span>
                   <% } %>
    
                </li>
    
           <% }) %>
        <%} else { %>

            <p>No records yet</p>

       <% }%>
        
    </ul>
    </div>
</body>
</html>